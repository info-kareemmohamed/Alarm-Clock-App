<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/CardTime_Card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp">

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#474F7E"

        >
        <TextView
            android:id="@+id/CardTime_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tyr , Mon"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/CardTime_Image"

            android:layout_marginTop="@dimen/_10sdp"

            />
         <ImageView
             android:id="@+id/CardTime_Image"
             android:layout_width="@dimen/_20sdp"

             android:layout_height="wrap_content"
             android:src="@drawable/ic_nightlight"
             android:layout_alignParentStart="true"
             android:layout_centerVertical="true"
             android:layout_marginStart="@dimen/_10sdp"


             />


        <TextView
            android:id="@+id/CardTime_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardTime_days"
           android:layout_toEndOf="@+id/CardTime_Image"
            android:textColor="@color/white"

            android:layout_margin="@dimen/_10sdp"
            android:text="7:58"
            android:textSize="@dimen/_35sdp" />

        <TextView
            android:id="@+id/CardTime_Abbreviations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CardTime_days"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/CardTime_Time"
            android:text="Am"
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/CardTime_Switc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_toEndOf="@+id/CardTime_Abbreviations"
            android:thumb="@drawable/thumb"
            app:thumbTint="@null"

            app:track="@drawable/track"
            app:trackTint="@null" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>