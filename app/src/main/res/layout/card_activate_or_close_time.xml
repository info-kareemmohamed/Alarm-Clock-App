<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/CardTime_Card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_10sdp">
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/space_cadet">

        <ImageView
            android:id="@+id/CardTime_Image"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_nightlight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/CardTime_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tyr , Mon"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@+id/CardTime_Image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/CardTime_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/CardTime_Image"
            app:layout_constraintTop_toBottomOf="@+id/CardTime_days"
            android:textColor="@color/white"
            android:layout_margin="@dimen/_10sdp"
            android:text="7:58"
            android:textSize="@dimen/_35sdp" />

        <TextView
            android:id="@+id/CardTime_Abbreviations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/CardTime_Time"
            app:layout_constraintTop_toBottomOf="@+id/CardTime_days"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Am"
            android:textColor="@color/white"
            android:textSize="@dimen/_35sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/CardTime_Switc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:thumb="@drawable/thumb"
            app:thumbTint="@null"
            app:track="@drawable/track"
            app:trackTint="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>